<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/menu_credenciales">

    <fragment
        android:id="@+id/menu_credenciales"
        android:name="com.example.wallet.credentials.CredentialsFragment"
        android:label="title_credenciales"
        tools:layout="@layout/fragment_credentials" >
        <action
            android:id="@+id/action_menu_credenciales_to_menu_transacciones2"
            app:destination="@id/menu_transacciones" />
        <action
            android:id="@+id/action_menu_credenciales_to_menu_pendiente2"
            app:destination="@id/menu_pendiente" />
    </fragment>

    <fragment
        android:id="@+id/menu_transacciones"
        android:name="com.example.wallet.transaction.TransactionFragment"
        android:label="title_transactions"
        tools:layout="@layout/fragment_transaction" >
        <action
            android:id="@+id/action_menu_transacciones_to_menu_pendiente4"
            app:destination="@id/menu_pendiente" />
    </fragment>

    <fragment
        android:id="@+id/menu_pendiente"
        android:name="com.example.wallet.pending.PendingFragment"
        android:label="title_pending"
        tools:layout="@layout/fragment_pending" />
</navigation>